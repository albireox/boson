{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2018", "dom", "esnext"],
    "sourceMap": true,
    "strict": true,
    "outDir": "../../build",
    "rootDir": "../../",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
