{
  "name": "boson",
  "productName": "boson",
  "version": "0.0.4-alpha.3",
  "author": "José Sánchez-Gallego <gallegoj@uw.edu>",
  "description": "SDSS observer graphical user interface",
  "repository": "github:albireox/boson",
  "homepage": "https://github.com/albireox/boson",
  "bugs": "https://github.com/albireox/boson/issues",
  "license": "BSD-3-Clause",
  "main": "build/src/main/main.js",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@iconify/icons-mdi": "^1.1.42",
    "@iconify/react": "^3.1.0",
    "@mui/icons-material": "^5.2.5",
    "@mui/lab": "^5.0.0-alpha.64",
    "@mui/material": "^5.2.8",
    "@mui/styles": "^5.2.3",
    "@mui/system": "^5.2.8",
    "@mui/x-data-grid": "^5.2.2",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.4",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.5",
    "gps-time": "^1.0.8",
    "highcharts": "^9.3.2",
    "highcharts-react-official": "^3.1.0",
    "js9": "^3.6.2",
    "keytar": "^7.7.0",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-highlight-words": "^0.17.0",
    "react-pdf": "^5.6.0",
    "react-virtuoso": "^2.4.0",
    "rxjs": "^7.5.2",
    "sprintf-js": "^1.1.2"
  },
  "scripts": {
    "start": "GENERATE_SOURCEMAP=false concurrently \"BROWSER=none react-scripts start\" \"tsc -p src/main -w --preserveWatchOutput\" \"wait-on http://127.0.0.1:3000 && tsc -p src/main && electron .\"",
    "build": "GENERATE_SOURCEMAP=false PUBLIC_URL=./ react-scripts build && tsc -p src/main && electron-builder",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "eject": "react-scripts eject",
    "publish": "GENERATE_SOURCEMAP=false PUBLIC_URL=./ react-scripts build && tsc -p src/main && electron-builder --publish always --config assets/builder-publish.json"
  },
  "build": {
    "appId": "com.boson.mac",
    "extends": null,
    "productName": "boson",
    "artifactName": "boson-${version}-${os}-${arch}.${ext}",
    "generateUpdatesFilesForAllChannels": true,
    "mac": {
      "target": [
        "default"
      ],
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "files": [
      "build/**/*",
      "public"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@iconify-icons/file-icons": "^1.1.7",
    "@types/electron-devtools-installer": "^2.2.1",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-highlight-words": "^0.16.4",
    "@types/react-pdf": "^5.0.9",
    "@types/react-router-dom": "^5.3.2",
    "@types/sprintf-js": "^1.1.2",
    "concurrently": "^7.0.0",
    "dotenv": "^12.0.3",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.13",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.1.1",
    "electron-reload": "^2.0.0-alpha.1",
    "prettier": "^2.5.1",
    "react-scripts": "^5.0.0",
    "source-map-explorer": "^2.5.2",
    "source-map-support": "^0.5.21",
    "typescript": "^4.5.4",
    "wait-on": "^6.0.0"
  },
  "resolutions": {
    "react-scripts/eslint-webpack-plugin": "2.3.0"
  },
  "packageManager": "yarn@3.1.1"
}
