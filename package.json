{
  "name": "boson",
  "version": "0.0.1",
  "author": "José Sánchez-Gallego <gallegoj@uw.edu>",
  "description": "SDSS observer graphical user interface",
  "homepage": "https://github.com/albireox/boson",
  "bugs": "https://github.com/albireox/boson/issues",
  "license": "BSD-3-Clause",
  "main": "build/electron/main.js",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.9",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "electron-store": "^6.0.1",
    "node-net": "^1.0.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "source-map-support": "^0.5.19",
    "typeface-roboto": "^1.1.13",
    "typescript": "4.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:windev": "concurrently \"SET BROWSER=none && yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:build": "yarn build && tsc -p electron && electron-builder",
    "eject": "react-scripts eject"
  },
  "build": {
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.1.6",
    "concurrently": "^5.3.0",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.4",
    "wait-on": "^5.2.0"
  }
}
