{
  "name": "boson",
  "productName": "boson",
  "version": "0.1.2-beta.1",
  "author": "José Sánchez-Gallego <gallegoj@uw.edu>",
  "description": "SDSS observer graphical user interface",
  "repository": "github:albireox/boson",
  "homepage": "https://github.com/albireox/boson",
  "bugs": "https://github.com/albireox/boson/issues",
  "license": "BSD-3-Clause",
  "main": "build/src/main/main.js",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@iconify/icons-mdi": "^1.2.32",
    "@iconify/react": "^4.0.0",
    "@mui/icons-material": "^5.10.9",
    "@mui/lab": "^5.0.0-alpha.104",
    "@mui/material": "^5.10.10",
    "@mui/styles": "^5.10.10",
    "@mui/system": "^5.10.10",
    "@mui/x-data-grid": "^5.17.8",
    "@mui/x-data-grid-pro": "^5.17.8",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "gps-time": "^1.0.8",
    "highcharts": "^10.2.1",
    "highcharts-react-official": "^3.1.0",
    "js9": "^3.8.0",
    "keytar": "^7.9.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-highlight-words": "^0.18.0",
    "react-pdf": "^5.7.2",
    "react-virtuoso": "^3.1.1",
    "rxjs": "^7.5.7",
    "sprintf-js": "^1.1.2",
    "uuid": "^9.0.0"
  },
  "workspaces": [
    "docs"
  ],
  "scripts": {
    "start": "concurrently \"yarn copy-deps\" \"BROWSER=none react-scripts start\" \"tsc -p src/main -w --preserveWatchOutput\" \"wait-on http://127.0.0.1:3000 && tsc -p src/main && electron .\"",
    "build": "PUBLIC_URL=./ react-scripts build && tsc -p src/main && electron-builder",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "eject": "react-scripts eject",
    "publish": "PUBLIC_URL=./ react-scripts build && tsc -p src/main && electron-builder --publish always --config assets/builder-publish.json && electron-builder install-app-deps",
    "copy-deps": "node ./scripts/copy-deps.js"
  },
  "build": {
    "appId": "com.boson.mac",
    "extends": null,
    "productName": "boson",
    "artifactName": "boson-${version}-${os}-${arch}.${ext}",
    "generateUpdatesFilesForAllChannels": true,
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "files": [
      "build/**/*",
      "public"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@iconify-icons/file-icons": "^1.2.2",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/jest": "^29.2.0",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.11.3",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-highlight-words": "^0.16.4",
    "@types/react-pdf": "^5.7.2",
    "@types/react-router-dom": "^5.3.3",
    "@types/sprintf-js": "^1.1.2",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.4.0",
    "dotenv": "^16.0.3",
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.2.2",
    "electron-reload": "^2.0.0-alpha.1",
    "prettier": "^2.7.1",
    "react-scripts": "^5.0.1",
    "source-map-explorer": "^2.5.3",
    "source-map-support": "^0.5.21",
    "typescript": "^4.8.4",
    "wait-on": "^6.0.1"
  },
  "resolutions": {
    "react-scripts/eslint-webpack-plugin": "2.3.0"
  },
  "packageManager": "yarn@3.2.2"
}
